<!DOCTYPE html>
<html lang="zh-CN" class="no-js">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta http-equiv="Content-Language" content="zh-cn" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="~/Static/Resources/bootstrap/css/bootstrap.css" />
	<link rel="stylesheet" href="~/Static/Resources/bootstrap/css/bootstrap-theme.css" />
	<link rel="stylesheet" href="~/Static/Resources/uploadify/uploadify.css" />
	<link rel="stylesheet" href="~/Static/Resources/site/site.css" />

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
